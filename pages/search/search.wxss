.search{
  display: flex;
  flex-direction: column;
  font-size: 30rpx;

  box-sizing: border-box;
}

/* 头部 */
.top{
  height: 70rpx;
  background-color: #C79A03;
  display: flex;
  flex-direction: row;
  color: #fff;
  padding: 2rpx 50rpx;
  align-items: center;
}
.input{
  height: 50rpx;
  border-radius: 20rpx;
  color: #fff;
  width: 70%;
  background-color: #D6B603;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cancel{
  height: 50rpx;
  width: 30%;
  display: flex;
  justify-content: center;
}

/* 内容 */

.content{
  margin-top: 70rpx;
  display: flex;
  background-color: #f1f1f1;
  width: 100%;
  height: 1130rpx;
  flex-direction: column;
  padding: 20rpx;
}
/* 热门搜索 */
.hot{
}
.search-type{
  display: flex;
  height: 100rpx;
  color: #999;
}
.search-content{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
  width: 710rpx;
}
.search-name{
  width: 210rpx;
  height: 70rpx;
  color: #757575;
  background-color: #fff;
  border-radius: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 10rpx;
  

}
